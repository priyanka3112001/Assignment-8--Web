<%- include('menu')%>


<div class="container">
  <h1>All Products</h1>

  <br><br>

  <div>
    <% if (products.length > 0) { %>
      <% products.forEach(function(product) { %>
        <div class=col-3 style="border: 1px solid #110303; padding: 20px; margin-bottom: 20px;">
          <h3><%= product.productName %></h3>
          <p>Price: $<%= product.productPrice %></p>
          <% if (product.productImg) { %>
            <img src="/uploads/<%= product.productImg %>" alt="<%= product.productName %>" width="200" height="200">
          <% } else { %>
            <p>No image available</p>
          <% } %>
        </div>
      <% }) %>
    <% } else { %>
      <p>No products available.</p>
    <% } %>
  </div>

</div>

<style>
  
    .container{
        border: solid;
        text-align: center;
        background-color: rgb(223, 154, 64);
    }
    h1{
        color: rgb(10, 18, 20);
    }
</style>
