    button{
        background-color: rgb(90, 165, 170);
        color: white;
    }
    .container{
        border: solid;
        text-align: center;
        background-color: rgb(100, 210, 216);
    }
      h1{
        color: rgb(22, 6, 6);
    }
</style>
